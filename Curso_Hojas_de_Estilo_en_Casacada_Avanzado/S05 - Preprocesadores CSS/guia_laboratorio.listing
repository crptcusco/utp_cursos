
.contenedor {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
  background-color: #f5f5f5;
}

@media (min-width: 768px) {
  .contenedor {
    padding: 40px;
  }
}

.card {
  box-shadow: 0 3px 10px rgba(0,0,0,0.2);
  border-radius: 8px;
  padding: 20px;
  background-color: white;
}

.card__titulo {
  color: #3498db;
  font-size: 1.5rem;
}

.card__texto {
  color: #333;
  line-height: 1.6;
}

